<table class="table table-hover">
	<thead class="thead-light">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>User_Type</th>
		<th colspan="2"></th>
    </tr>
    </thead>

    <tbody data-spy="scroll" data-target="#myScrollspy" data-offset="1">
       	<div id = "myScrollspy">
        <% @users.each do |user| %>
            <tr>
              	<td><%=user.name %></td>
            	<td><%=user.email %></td>
              	<td><%=user.user_type %></td>
           	</tr>
       	<% end %>
        <% if current_user.user_type == "qa" %>
            <tr>
              	<td><%= link_to button_tag("Report user"),new_project_user_path(project) %></td>
            </tr>
        <% end %>
        </div>
    </tbody>
</table>
