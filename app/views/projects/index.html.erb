<p id="notice"><%= notice %></p>

<div class="container border border-dark rounded">
  <br>
<font size="+2"><b>Projects</b></font>
<%= user_session %>
<% if current_user.user_type == "manager" %>
  <%= link_to button_tag('New Project', :class => "btn btn-primary float-right"), new_project_path %>
<% end %>
<br><br>
  <% @projects.each do |project| %>
    <div class= "container border bg-secondary bg-light border-dark rounded">

      <div class="inline-text">  
        <font size="+1"><b>Title:</b></font>
        <font size="+1"><%= project.title %></font> 
      </div><br>
      <div class="inline-text"> 
        <font size="+1"><b>Description:</b></font>
        <p><%= project.content %></p>
      </div>
      <div class="float-right">
      <td><%= link_to button_tag('show',:class => "btn btn-success"), project_path(project) %></td>
      <% if current_user.user_type == "manager" %>
        <td><%= link_to button_tag('Edit',:class => "btn btn-warning"), edit_project_path(project) %></td>
        <td><%= link_to button_tag('Delete',:class => "btn btn-danger"), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %> <br><br>
    </div>
    </div>   
    <br>    
  <% end %>
</div>