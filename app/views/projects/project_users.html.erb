<div class="container" > 
  <table class="table table-hover">

  	<thead class="thead-light">
  	<tr>
  		<th>Name</th>
  		<th>Email</th>
  		<th>User_Type</th>
  		<th colspan="1"></th>
      </tr>
      </thead>

      <tbody data-spy="scroll" data-target="#myScrollspy" data-offset="1">
         	<div id = "myScrollspy">
          <% @Accepts_users.each do |user| %>
              <tr>
                <td><%=user.name %></td>
              	<td><%=user.email %></td>
                <td><%=user.user_type %></td>
                <% if user.user_type != "manager" %>
                  <td><%=link_to button_tag('Remove'),project_remove_user_project_path(@project.id,:user => user.id) %></td>
                <% end %>
             	</tr>
         	<% end %>
          </div>
      </tbody>
  </table>
  <table class="table table-hover">
    <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User_Type</th>
      <th colspan="1"></th>
      </tr>
      </thead>

      <tbody data-spy="scroll" data-target="#myScrollspy" data-offset="1">
          <div id = "myScrollspy">
          <% @reject.each do |user| %>
              <tr>
                <td><%=user.name %></td>
                <td><%=user.email %></td>
                <td><%=user.user_type %></td>
                <td><%= link_to button_tag('Add'),project_add_user_project_path(@project.id,:user =>user.id) %></td>
              </tr>
          <% end %>
          </div>
      </tbody>
  </table>
<%= link_to button_tag('Back'), root_path %>
</div>

